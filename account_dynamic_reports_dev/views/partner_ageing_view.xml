<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account_dynamic_reports_dev.partner_ageing">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <style>
                        .pims_report_content{
                            font-size: 14px;
                            font-family" 'Arial';
                        }

                        .pims_report_line_table {
                            width:100%;
                            border-collapse: collapse;
                        }

                        .pims_report_line_table thead{
                            width: 100%;
                            overflow: auto;
                            border-bottom:2px solid grey;
                        }

                        .pims_report_line_main_tr {
                            font-weight:bold;
                            --background-color: cyan;
                            border-bottom:1px solid grey;
                        }

                        .pims_report_line_initial_tr {
                            font-style:italic;
                        }

                        .pims_report_line_subtotal {
                            font-weight:bold;
                            background-color: white;
                            --border:1px solid grey;
                        }
                    </style>
                    <h3><span t-esc="res_company.name"/>: Partner Ageing</h3>
                    <div>

                        <div class="row pims_report_content">
                            <div class="col-3">
                                <strong>As on Date:</strong>
                                <p t-esc="Filters['as_on_date']" t-options='{"widget": "date"}'></p>
                            </div>
                            <div class="col-6">
                                <strong>Partners:</strong>
                                <p t-esc="', '.join([ lt or '' for lt in Filters['partners'] ])"/>
                            </div>
                            <div class="col-3">
                                <strong>Partner Tags:</strong>
                                <p t-esc="', '.join([ lt or '' for lt in Filters['categories'] ])"/>
                            </div>
                        </div>

                        <br></br>

                        <table class="pims_report_line_table pims_report_content" width="100%" border="0">
                            <thead>
                                <tr style="text-align:center;">
                                    <th>Partner</th>
                                    <th style="text-align:center">Total</th>
                                    <th style="text-align:center" t-if ="Filters['percent_view'] == true">%</th>
                                    <t t-foreach="Period_List" t-as="period">
                                        <th style="text-align:center;margin-bottom:10px;"><t t-esc="period"/></th>
                                    </t>
                                    
                                </tr>
                            </thead>
                            <t t-foreach="Ageing_data" t-as="line">

                                <t t-if="line == 'Total'">
                                    <t t-set="style" t-value="'font-weight: bold;'"/>
                                </t>
                                <t else="">
                                    <t t-set="style" t-value="'font-weight: normal;'"/>
                                </t>

                                <tr class="pims_report_line_main_tr" t-att-style="style">
                                    <td>
                                        <t t-if="line == 'Total'">
                                            <span>Total</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-esc="Ageing_data[line]['partner_name']"/>
                                        </t>
                                    </td>
                                    <t t-if="Ageing_data[line]['total']">
                                        <td style="text-align:right">
                                            <span t-esc="Ageing_data[line]['total']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td style="text-align:center" t-if ="Filters['percent_view'] == true">
                                            <!-- <span t-esc="Ageing_data[line]['percentage']"/> -->
                                            <span>-</span>
                                        </td>
                                    </t><t t-else=""><td class="text-center">-</td></t>
                                    <t t-foreach="Period_List" t-as="period">
                                        <t t-if="Ageing_data[line][period]">
                                            <td style="text-align:right">
                                                <span t-esc="Ageing_data[line][period]" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                        </t><t t-else=""><td style="text-align:center">-</td></t>
                                    </t>
                                </tr>

                                <tr>
                                    <td colspan="14">
                                        <t t-if="Filters['include_details'] == true">
                                            <table id="detail-row" class="pims_report_line_table pims_report_content" style="font-size:12px;" cellspacing="0" width="100%" border="0">
                                                <tr>
                                                    <th>Entry label</th>
                                                    <th class="text-center">Invoice Date</th>
                                                    <th class="text-right">Journal</th>
                                                    <th class="text-right">Account</th>
                                                    <th class="text-right"></th>
                                                    <th class="text-right" t-if ="Filters['percent_view'] == true"></th>
                                                    <th class="text-right">Current</th>
                                                    <th class="text-right">1 - 30</th>
                                                    <th class="text-right">31 - 60</th>
                                                    <th class="text-right">61 - 90</th>
                                                    <th class="text-right">90+</th>
                                                </tr>
                                                <t t-foreach="sub_lines" t-as="i">
                                                    <tr t-if="str(i['partner_id']) == str(line)">
                                                        <td width="200px" style="text-align:center;"><t t-esc="i['move_name']"/></td>
                                                        <td width="100px" style="text-align:center;"><t t-esc="i['date_maturity']"/></td>
                                                        <td width="100px" style="text-align:center;"><t t-esc="i['journal_name']"/></td>
                                                        <td width="150px" style="text-align:center;"><t t-esc="i['account_name']"/></td>
                                                        <td width="100px" style="text-align:center;"></td>
                                                        <td width="50px" style="text-align:center;" t-if ="Filters['percent_view'] == true"></td>
                                                        <td width="9%" style="text-align:right;"><t t-esc="i['range_0']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                                        <td width="9%" style="text-align:right;"><t t-esc="i['range_1']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                                        <td width="9%" style="text-align:right;"><t t-esc="i['range_2']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                                        <td width="9%" style="text-align:right;"><t t-esc="i['range_3']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                                        <td width="9%" style="text-align:right;"><t t-esc="i['range_6']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                                    </tr>
                                                </t>
                                            </table>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                    <br></br>
                    <p style="text-align:center"> *** END OF DOCUMENT ***</p>
                </div>
           </t>
        </t>
    </template>

    <report id="action_print_partner_ageing"
        model="ins.partner.ageing"
        report_type="qweb-pdf"
        menu="False"
        string="Partner Ageing"
        name="account_dynamic_reports_dev.partner_ageing"
        file="account_dynamic_reports_dev.partner_ageing"
    />

    <report id="action_ins_partner_ageing_xlsx"
        model="ins.partner.ageing"
        string="Partner Aging"
        report_type="xlsx"
        name="account_dynamic_reports_dev.ins_partner_ageing_xlsx"
        file="account_dynamic_reports_dev.ins_partner_ageing_xlsx"
        attachment_use="False"
        print_report_name="'Ageing - %s' % (object.as_on_date)"
    />
        
</odoo>
