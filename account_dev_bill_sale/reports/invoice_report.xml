    <template id="report_invoice_document_dev" inherit_id="account.report_invoice_document">
        <xpath expr="//div[hasclass('row')]" position="replace">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Gideon Roman"/>
            <div class="page" style="font-size: 12px; font-family: 'Gideon Roman', sans-serif;">
                <![CDATA[<br>]]>
                <div style="font-size: 14px; margin-top: 2px; padding: 3px; background-color: #061145; color: white; text-align: center; height: 25px; font-weight: bold; text-transform:uppercase">
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <span t-if="o.name != '/'" t-field="o.name"/>
                </div>

                <div style="border: 0px; padding: 10px;">
                    <table style="border: 0px;" width="100%">
                        <tr>
                            <td style="border: 0px; background: white; width: 18%;">Date</td>
                            <td style="border: 0px; background: white; width: 2%;">:</td>
                            <td style="border: 0px; background: white; width: 41%;"><span t-esc='o.invoice_date' t-options='{"widget": "date"}'/></td>
                            <!--<td style="border: 0px; background: white; width: 22%;">EPDA NO.</td>
                            <td style="border: 0px; background: white; width: 2%;">:</td>
                            <td style="border: 0px; background: white; width: 15%;"><span t-field='o.name'/></td>-->
                        </tr>
                        <tr>
                            <td style="border: 0px; background: white;">To</td>
                            <td style="border: 0px; background: white;">:</td>
                            <td style="border: 0px; background: white;"><span t-field='o.partner_id'/></td>
                        </tr>
                        <tr>
                            <td style="border: 0px; background: white;">Kind Attention</td>
                            <td style="border: 0px; background: white;">:</td>
                            <td style="border: 0px; background: white;"><span t-field='o.sale_order_id.customer_contact'/></td>
                        </tr>
                        <tr>
                            <td style="border: 0px; background: white;">From</td>
                            <td style="border: 0px; background: white;">:</td>
                            <td style="border: 0px; background: white;"><span t-field='o.company_id'/></td>
                        </tr>
                    </table>
                    <div style="border: 0px; padding: 10px; margin-top: 10px; background-color: #061145; color: white;">
                        <table style="border: 0px;" width="100%">
                            <tr>
                                <td style="border: 0px; width: 18%; background-color: #061145; color: white;">VESSEL'S NAME</td>
                                <td style="border: 0px; width: 2%; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; width: 41%; background-color: #061145; color: white;"><span t-field='o.sale_order_id.vessel_ids'/></td>
                                <td style="border: 0px; width: 23%; background-color: #061145; color: white;">DN NO.</td>
                                <td style="border: 0px; width: 2%; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; width: 14%; background-color: #061145; color: white;"><span t-field='o.name'/></td>
                            </tr>
                            <tr>
                                <td style="border: 0px; background-color: #061145; color: white;">LAST PORT</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc='o.sale_order_id.last_port_id.name'/></td>
                                <td style="border: 0px; background-color: #061145; color: white;">PROFORMA NO.</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="o.sale_order_id.name"/></td>
                            </tr>
                            <tr>
                                <td style="border: 0px; background-color: #061145; color: white;">LOADING PORT</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="', '.join([p.name for p in o.sale_order_id.load_port_ids])"/></td>
                                <td style="border: 0px; background-color: #061145; color: white;">COMMODITY</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="o.sale_order_id.commodity"/></td>
                            </tr>
                            <tr>
                                <td style="border: 0px; background-color: #061145; color: white;">DISCH PORT</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="', '.join([p.name for p in o.sale_order_id.discharge_port_ids])"/></td>
                                <td style="border: 0px; background-color: #061145; color: white;">CARGO QTY</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="'%s MT' % o.sale_order_id.cargo"/></td>
                            </tr>
                            <tr>
                                <td style="border: 0px; background-color: #061145; color: white;">START DATE</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                            <td style="border: 0px; background-color: #061145; color: white;"><span t-esc='o.sale_order_id.start_date' t-options='{"widget": "date"}'/></td>
                                <td style="border: 0px; background-color: #061145; color: white;">GRT</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="'%s GRT' % o.sale_order_id.grt"/></td>
                            </tr>
                            <tr>
                                <td style="border: 0px; background-color: #061145; color: white;">LOADING DATE</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc='o.sale_order_id.loading_date' t-options='{"widget": "date"}'/></td>
                                <td style="border: 0px; background-color: #061145; color: white;">NO. PO</td>
                                <td style="border: 0px; background-color: #061145; color: white;">:</td>
                                <td style="border: 0px; background-color: #061145; color: white;"><span t-esc="o.sale_order_id.client_order_ref"/></td>
                            </tr>
                            <tr>
