<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_sale_cost_structure_tree" model="ir.ui.view">
            <field name="name">sale.cost.structure.tree</field>
            <field name="model">sale.cost.structure.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Cost Structure" create="0" edit="0" delete="0">
                    <field name="sequence" widget="handle" invisible="1"/>
                    <field name="display_type" invisible="1"/>
                    <field name="package_id" options="{'no_create': True}"/>
                    <field name="header_id" options="{'no_create': True}"/>
                    <field name="item_id" options="{'no_create': True}"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="estimated_cost"/>
                </tree>
            </field>
        </record>

