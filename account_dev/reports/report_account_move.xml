<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_journal_voucher"
            model="report.paperformat">
            <field name="name">Journal Voucher</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">22</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">18</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="account_journal_voucher"
            string="Journal Voucher"
            model="account.move"
            report_type="qweb-pdf"
            file="account_tbd.account_journal_voucher_template"
            name="account_tbd.account_journal_voucher_template"
            paperformat="paperformat_journal_voucher"/>

        <template id="account_journal_voucher_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Gideon Roman"/>
                <div class="page" style="font-size: 14px; font-family: 'Gideon Roman', sans-serif;">
                    <div>
                        <h3 class="text-center">
                            <span><t t-esc="o.journal_id.name"/></span>
                            <span t-field="o.name"/>
                        </h3>
                    </div>
                    <div class="row mt32 mb32" style="padding-left: 20px; padding-top: 10px;">
                        <table style="width:100%;">
                            <tr height="30px">
                                <td>Date</td><td>:</td><td><span t-field="o.date" t-field-options='{"format": "dd-MMM-yyyy"}'/></td>
                                <td style="width:100px"/>
                                <td>Journal Type</td><td style="width:10px">:</td><td><t t-esc="o.journal_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Reference</td><td style="width:10px">:</td><td><t t-esc="o.ref"/></td>
                                <td/>
                                <td></td><td></td><td></td>
                            </tr>
                        </table>
                    </div>
                    <div style="padding-top:30px;">
                        <table class="table table-condensed" name="payment_journal_line_table">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Analytic Account</th>
                                    <th>Analytic Tags</th>
                                    <th>Label</th>
                                    <!--<th>Cost Center</th>-->
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="debit" t-value="0"/>
                                <t t-set="credit" t-value="0"/>
                                <tr t-foreach="o.line_ids" t-as="l">
                                    <td style="font-size:12px"><span t-field="l.account_id"/></td>
                                    <td><span t-field="l.analytic_account_id.name"/></td>
                                    <td><span t-field="l.analytic_tag_ids"/></td>
                                    <td style="font-size:12px"><span t-field="l.name"/></td>
                                    <!--<td><span t-field="l.cost_center_id.name"/></td>-->
                                    <td class="text-right" style="font-size:12px"><t t-set="debit" t-value="debit+l.debit"/><span t-field="l.debit" t-field-options='{"widget": "monetary", "display_currency": l.currency_id}'/></td>
                                    <td class="text-right" style="font-size:12px"><t t-set="credit" t-value="credit+l.credit"/><span t-field="l.credit" t-field-options='{"widget": "monetary", "display_currency": l.currency_id}'/></td>
                                </tr>
                                <tr style="font-weight:bold;">
                                    <td>&amp;nbsp;</td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">Total</td>
                                    <td class="text-right" style="font-size:12px"><span t-esc="debit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    <td class="text-right" style="font-size:12px"><span t-esc="credit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <table style="width:100%; page-break-inside: avoid;">
                        <thead>
                            <tr>
                                <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; width:20%">PREPARED BY</th>
                                <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; width:20%">REVIEWED BY</th>
                                <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; width:20%">APPROVED BY</th>
                                <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; width:20%">RECEIVED BY</th>
                            </tr>
                        </thead>
                        <tr>
                            <th class="text-center" style="border: 1px solid black;height: 100px">
                                <span t-raw="user.signature"/>
                            </th>
                            <th class="text-center" style="border: 1px solid black;height: 100px">
                                <!--<span t-if="o.signed_purchase_approval1_id and o.state in ('purchase', 'done')">-->
                                <span t-if="o.move_type == 'out_invoice'">
                                    <span t-raw="o.signed_invoice_approval1_id.signature"/>
                                </span>
                                <span else-if="o.move_type == 'in_invoice'">
                                    <span t-raw="o.bill_signed1_id.signature"/>
                                </span>
                                <span else="">
                                    <span t-raw="o.move_signed1_id.signature"/>
                                </span>
                                <!--</span>-->
                            </th>
                            <th class="text-center" style="border: 1px solid black;height: 100px">
                                <span t-if="o.move_type == 'out_invoice'">
                                    <!--<span t-raw="o.signed_invoice_approval1_id.signature"/>-->
                                </span>
                                <span else-if="o.move_type == 'in_invoice'">
                                    <span t-raw="o.bill_signed2_id.signature"/>
                                </span>
                                <span else="">
                                    <span t-raw="o.move_signed2_id.signature"/>
                                </span>
                            </th>
                            <th class="text-center" style="border: 1px solid black;height: 100px"/>
                        </tr>
                        <tr>
                            <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; font-size: 13px;">
                                <span t-field="user.name"/>
                            </th>
                            <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; font-size: 13px;">
                                <span t-if="o.move_type == 'out_invoice'">
                                    <span t-field="o.signed_invoice_approval1_id"/>
                                </span>
                                <span else-if="o.move_type == 'in_invoice'">
                                    <span t-field="o.bill_signed1_id"/>
                                </span>
                                <span else="">
                                    <span t-field="o.move_signed1_id"/>
                                </span>
                            </th>
                            <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; font-size: 13px;">
                                <span t-if="o.move_type == 'out_invoice'">
                                    <!--<span t-field="o.signed_invoice_approval1_id.signature"/>-->
                                </span>
                                <span else-if="o.move_type == 'in_invoice'">
                                    <span t-field="o.bill_signed2_id"/>
                                </span>
                                <span else="">
                                    <span t-field="o.move_signed2_id"/>
                                </span>
                            </th>
                            <th class="text-center" style="border: 1px solid black; padding-top: 10px; padding-bottom: 10px; padding-left:10px; padding-right:10px; font-size: 13px;">
                                <span t-field="o.paid_to"/>
                            </th>
                        </tr>
                    </table>
                    <!--<div style="padding-top:100px;">
                        <table class="table" style="widht:100%;height:200px;border: 1px solid black">
                            <tr class="border-black" style="height:25px;">
                                <td width="25%" style="border: 1px solid">Prepared by,</td>
                                <td width="25%" style="border: 1px solid">Approved by,</td>
                            </tr>
                            <tr class="border-black">
                                <td style="border: 1px solid"></td>
                                <td style="border: 1px solid"></td>
                            </tr>
                        </table>
                    </div>-->
                </div>
            </t>
        </template>

        <template id="account_journal_voucher_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="account_tbd.account_journal_voucher_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
